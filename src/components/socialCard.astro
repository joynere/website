---
import Icon from 'astro-icon';
interface Props {
    title: string;
    iconName: string;
    link: string;
}

const { title, iconName, link }: Props = Astro.props;
---

<a class="flex w-fit text-gray-50 hover:text-gray-400" href={link}>
    <div class="flex flex-row gap-4">
        <Icon name={iconName} class="h-14 flex" />
        <h3 class="text-3xl self-center">{title}</h3>
    </div>
</a>
